#notes - upgrade libtool, autoconf, automake, and ln /usr/bin to /usr/bin/include refs as needed
# also need to ln -s /usr/local/bin/libtoolize /usr/bin/glibtoolize
#!/bin/bash
rm -rf lib
mkdir lib
chmod uog+rx configure
export LIBTOOLIZE=/usr/local/bin/libtoolize

#PowerPC (old) Macs on OS X 10.4 (Tiger)
export MARCH=ppc
export CXX=g++-4.0
export CC=gcc-4.0
export MACOSX_DEPLOYMENT_TARGET=10.4
export SDKROOT="/Developer/SDKs/MacOSX10.4u.sdk"
export LDFLAGS="-isysroot $SDKROOT -Wl,-syslibroot,$SDKROOT -arch $MARCH"
export CPPFLAGS="-O2 -I$SDKROOT/usr/include -I$SDKROOT/usr/local/include -isysroot $SDKROOT -arch $MARCH"
export CFLAGS="-O2 -I$SDKROOT/usr/include -I$SDKROOT/usr/local/include -isysroot $SDKROOT -arch $MARCH"
export CXXFLAGS="-O2 -I$SDKROOT/usr/include -I$SDKROOT/usr/local/include -isysroot $SDKROOT -arch $MARCH"
./configure --without-openssl-incdir --enable-static --disable-shared --oldincludedir=$SDKROOT/usr/include
make clean
cd ntpdate
make
cd ..
mv ntpdate/ntpdate ../client/bin/init/ntpdate_4.2.4p7c_powerpc-apple-darwin
make clean

#Intel 32-bit Macs on OS X 10.4 (Tiger)
export MARCH=i386
export CXX=g++-4.0
export CC=gcc-4.0
export MACOSX_DEPLOYMENT_TARGET=10.4
export SDKROOT="/Developer/SDKs/MacOSX10.4u.sdk"
export LDFLAGS="-isysroot $SDKROOT -Wl,-syslibroot,$SDKROOT -arch $MARCH"
export CPPFLAGS="-O2 -I$SDKROOT/usr/include -I$SDKROOT/usr/local/include -isysroot $SDKROOT -arch $MARCH"
export CFLAGS="-O2 -I$SDKROOT/usr/include -I$SDKROOT/usr/local/include -isysroot $SDKROOT -arch $MARCH"
export CXXFLAGS="-O2 -I$SDKROOT/usr/include -I$SDKROOT/usr/local/include -isysroot $SDKROOT -arch $MARCH"
./configure --without-openssl-incdir --enable-static --disable-shared --oldincludedir=$SDKROOT/usr/include
make clean
cd ntpdate
make
cd ..
mv ntpdate/ntpdate ../client/bin/init/ntpdate_4.2.4p7c_i686-apple-darwin

#Intel 64-bit Macs on 10.5
export MARCH=x86_64
export CXX=g++-4.0
export CC=gcc-4.0
export MACOSX_DEPLOYMENT_TARGET=10.5
export SDKROOT="/Developer/SDKs/MacOSX10.5.sdk"
export LDFLAGS="-isysroot $SDKROOT -Wl,-syslibroot,$SDKROOT -arch $MARCH"
export CPPFLAGS="-O2 -I$SDKROOT/usr/include -I$SDKROOT/usr/local/include -isysroot $SDKROOT -arch $MARCH"
export CFLAGS="-O2 -I$SDKROOT/usr/include -I$SDKROOT/usr/local/include -isysroot $SDKROOT -arch $MARCH"
export CXXFLAGS="-O2 -I$SDKROOT/usr/include -I$SDKROOT/usr/local/include -isysroot $SDKROOT -arch $MARCH"
./configure --without-openssl-incdir --enable-static --disable-shared --oldincludedir=$SDKROOT/usr/include
make clean
cd ntpdate
make
cd ..
mv ntpdate/ntpdate ../client/bin/init/ntpdate_4.2.4p7c_x86_64-apple-darwin
lipo -arch ppc ../client/bin/init/ntpdate_4.2.4p7c_powerpc-apple-darwin -arch i386 ../client/bin/init/ntpdate_4.2.4p7c_i686-apple-darwin -arch x86_64 ../client/bin/init/ntpdate_4.2.4p7c_x86_64-apple-darwin -create -output ../client/bin/init/ntpdate_4.2.4p7c_universal-apple-darwin
make clean
